{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
